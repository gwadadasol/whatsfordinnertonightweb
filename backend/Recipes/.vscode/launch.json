    "version": "0.2.0",
    "configurations": [
        {
            "type": "coreclr",
            "request": "launch",
            "name": "Launch .NET Core App",
            "program": "${workspaceFolder}/bin/Debug/net8.0/${input:programName}.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "programName",
            "description": "Name of the .NET Core DLL to launch"
        }
    ]
}